<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/ord_cliente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Cliente"
            android:textSize="20dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/button_search_c"
            android:layout_width="100dip"
            android:layout_height="45dip"
            android:src="@drawable/search_customer"
            android:scaleType="fitXY"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/edit_ord_vehiculo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Vehiculo"
            android:textSize="20sp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/button_search_v"
            android:layout_width="100dip"
            android:layout_height="45dip"
            android:scaleType="fitXY"
            android:src="@drawable/cars_2"
            android:layout_weight="1"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/button_ord_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="agregar"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_ord_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="cancelar"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>